						.laboratory-bdf-template__imgs
							.laboratory-bdf-template__img
								img(src=img+"laboratory-template-5.png", alt="") 
								p Дмитрий Ши
							.laboratory-bdf-template__img
								img(src=img+"laboratory-template-6.png", alt="") 
